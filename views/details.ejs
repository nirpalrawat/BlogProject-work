<%- include('./header.ejs')%>


    <div class="container my-4 my-lg-5 blog-detail">
        <div class="row">
            <div class="col-lg-8">
               
                <div>
                   
                    <h2><%= d.title %></h2>
                    <P>by Mobitech on<span></span></P>
                   
                    
                       <img src="<%= d.image.url %>" class="img-fluid" alt="" />
                    
                    
                        <p class="mt-3"> <%= d.description %></p>
               
                </div>
               
            </div>
            <div class="col-lg-4">
                <div>
                    <h5 class="bg-dark text-white py-2 px-3">Recent Blogs</h5>
                    <div class="row gy-1">
                      
                            <% r.forEach((recentitem)=>{ %>

                            <div class="col-lg-4">
                                <img src="<%=recentitem.image.url %>" alt="" class="img-fluid" />
                            </div>
                            <div class="col-lg-8">
                                <h5><%= recentitem.title %></h5>
                                <p>Posted On: March 22, 2024</p>
                            </div>
                       <% }) %>
                       
                    </div>

                </div>

                <div class="mt-2">
                    <h5 class="bg-dark text-white py-2 px-3">Categories</h5>
                    <div class="row gy-1">
                        <% c.forEach((categoryitem)=>{ %>
                            <div>
                               <h5><a href="" class="text-decoration-none"><%= categoryitem.cat_name %></a></h5>
                            </div>
                            <% }) %>

                    </div>


                </div>
                
              
            </div>
        </div>
    </div>









<%- include('./footer.ejs')%>