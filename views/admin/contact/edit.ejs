<%- include('../../header.ejs')%>

    <!-- dashboard blog start -->
    <section class="dashboard-wrap mtb-40">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        <div class="dash-left">
                            <ul>
                                <li class="active"><a href="/admin/dashboard" class="active mt-5">Dashboard</a></li>
                                <li><a href="/admin/displayblog">Blogs</a></li>
                                <li><a href="/admin/categoriedisplay">Categories</a></li>
                                <li><a href="/admin/contactdisplay">Contact</a></li>
                                <li><a href="/admin/aboutdisplay">About</a></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="dash-right">
                            <br>
                            <h1>Contact Update</h1>
                            <form action="/contactupdate/<%= edit._id %>" method="post">
                                <div class="form-group">
                                  <input type="text" name="name" class="form-control mt-3" placeholder="Name" required>
                                </div>
                                <div class="form-group">
                                  <input type="text" name="email" class="form-control mt-3" placeholder="E-Mail" required>
                                </div>
                                <div class="form-group">
                                  <input type="number" name="phone" class="form-control mt-3" placeholder="Phone" required>
                                </div>
                                <div class="form-group">
                                  <textarea name="message" rows="5" class="form-control mt-3" placeholder="Message"></textarea>
                                </div>
                                <div class="form-group">
                                  <button type="submit" class="btn btn-success mt-5">Update</button>
                                </div>
                              </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- dashboard blog end -->






