<%- include('./header.ejs')%>

<!-- contact section start -->

<section class="bg-light">
    <div class="container mt-5" style="background-color: rgb(48, 199, 93);">
        <div class="page-desc mt-5">
          <div class="row justify-content-center">
            <div class="col-md-8 mt-5">
              <h1>Contact</h1>
              <form action="/insertcontact" method="post">
                <div class="form-group">
                  <input type="text" name="name" class="form-control mt-3" placeholder="Name" required>
                </div>
                <div class="form-group">
                  <input type="text" name="email" class="form-control mt-3" placeholder="E-Mail" required>
                </div>
                <div class="form-group">
                  <input type="number" name="phone" class="form-control mt-3" placeholder="Phone" required>
                </div>
                <div class="form-group">
                  <textarea name="message" rows="5" class="form-control mt-3" placeholder="Message"></textarea>
                </div>
                <div class="form-group">
                  <button class="btn btn-success mt-5">Send Message</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
</section>

<!-- contact section end -->

